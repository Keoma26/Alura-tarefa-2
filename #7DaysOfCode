const escolha = prompt(   "Você quer seguir para a área de 'Front-End' ou de 'Back-End'? Digite 1 para Front-End ou 2 para Back-End");
 
if (escolha === "1") {
  prompt("digite 1 para aprender React ou 2 para aprender Vue");
} else if (escolha === "2") {
  prompt("digite 1 para aprender C# ou 2 para aprender Java");
} else {
  alert("Por favor. Aperte 1 ou 2");
}


const fullStack = prompt("Digite 1 se você quer seguir se especializando na área escolhida ou 2 se que se desenvolvendo para se tornar Fullstack?");
